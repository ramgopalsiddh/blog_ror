<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h4>Forgot Your Password?</h4>
        </div>
        <div class="card-body">
          <p class="card-text">Enter your email address below and we'll send you a link to reset your password.</p>
          <%= form_with url: password_resets_path do |form| %>
            <div class="mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
            </div>

            <div class="mb-3 row justify-content-center">
              <div class="col-8">
                <%= form.submit "Send Password Reset Email", class: "btn btn-outline-success btn-lg" %>
              </div>
            </div>

            <div class="mb-3 row justify-content-center">
              <div class="col-8">
                <%= link_to "Back to Login", login_path, class: "btn btn-outline-primary btn-lg" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
