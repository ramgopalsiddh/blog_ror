<h1 class="text-center pt-4"><%= @user.username %>'s Profile</h1>

<%= avatar_for @user, size: '200x200' %>

<% if logged_in? && @user == current_user %>
  <div class="text-center pt-4">
    <%= link_to "Edit Your Profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center pt-4">Articles</h3>

<% if @user.articles.count > 3 %>
  <div class="pagination-container">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>


<% if @user.articles.count > 0 %>
  <!-- Print articles if the user has articles -->
  <%= render 'articles/article' %>
<% else %>
  <!-- Print message if the user has no articles -->
  <h3 class="text-center pt-4">This user doesn't have any articles.</h3>
<% end %>


<% if @articles.count > 2 %>
  <div class="pagination-container">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
