<h1 class="text-center pt-4">Create a new Category</h1>

<div class="container text-center ">
    <div class="row justify-content-center">
  
      <!-- show errors by render errors from shared folder  -->
      <%= render 'shared/errors', obj: @category %>
  
      <!-- Form for submit title and description -->
      <%= form_with(model: @category, class: "shadow p-3 mb-3  rounded", local: true, data: {turbo: false })  do |f| %>
  
        <div class="mb-3 row justify-content-center">
          <%= f.label :name, "Category Name:", class: "col-sm-2 col-form-label fw-bold" %>
          <div class="col-sm-5">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter Category Name" %>
          </div>
        </div>

        <div class="mb-3 row ">
          <div class="col-11">
            <%= f.submit class: "btn btn-outline-success btn-lg" %>
          </div>
        </div>
  
        <div class="mb-3">
          <div class="col-12">
            <%= link_to 'Return ðŸ”™ to Articles listing', articles_path, class: "btn btn-outline-primary btn-lg" %>
          </div>
        </div>
  
      <% end %>
    </div>
</div>
  

