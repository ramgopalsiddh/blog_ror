<h1 class="text-center pt-4">Login for Alpha Blog</h1>

<div class="container ">

    <div class="row justify-content-center">

      <!-- Form for submit title and description -->
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3  rounded", local: true, data: {turbo: false })  do |f| %>

        <div class="mb-3 row">
          <%= f.label :email, class: "col-sm-2 col-form-label fw-bold" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter Your Email Address" %>
          </div>
        </div>

        <div class="mb-3 row">
            <%= f.label :password, class: "col-sm-2 col-form-label fw-bold" %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter Your password", id: "password" %>
              <div class="mt-3">
                <%= check_box_tag 'show_password', '1', false, id: 'show_password_checkbox' %>
                <%= label_tag 'show_password', 'Show Password' %>
              </div>
            </div>
        </div>

        <div class="mb-3 row justify-content-center">
          <div class="col-8">
            <%= f.submit "Log in", class: "btn btn-outline-success btn-lg" %>
          </div>
        </div>
  
        <div class="mb-3 row justify-content-center">
          <div class="col-8">
            <%= link_to 'Return ðŸ”™ to Articles listing', articles_path, class: "btn btn-outline-primary btn-lg" %>
          </div>
        </div>
  
      </div>
      <% end %>
  
  </div>
  