<!-- Show a Article Page -->
<h2 class="text-center pt-4"> <%= @article.title %> </h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header fst-italic">
          by <%= @article.user.username if @article.user %>
          <%= link_to avatar_for(@article.user), user_path(@article.user) %>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%= simple_format(@article.description) %></div>
          <% if logged_in? && @article.user == current_user %>
            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info" %>
            <%= link_to 'Delete', article_path(@article), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@article.created_at) %> ago, Edited <%= time_ago_in_words(@article.updated_at) %> ago </small>
        </div>
        <div class="card-footer">
          <% if logged_in? %>
            <%= link_to 'â• ğŸ†• Article', new_article_path, class: "btn btn-outline-primary btn-md" %>
          <% end %>
          <%= link_to 'Return ğŸ”™ to Articles listing', articles_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
